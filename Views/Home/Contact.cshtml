<div class="card mt-5">
    <div class="card-body">
        <h2 class="card-title">@ViewData["Message"]</h2>
        <form asp-action="Contact" method="post" class="mt-4">
            <div class="mb-3">
                <label for="Name" class="form-label">Name</label>
                <input type="text" class="form-control" name="Name" required />
            </div>
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" name="Email" required />
            </div>
            <div class="mb-3">
                <label for="Message" class="form-label">Message</label>
                <textarea class="form-control" name="Message" rows="3" required></textarea>
            </div>
            <div class="mb-3">
                <label for="Age" class="form-label">Age (optional)</label>
                <input type="number" class="form-control" name="Age" />
            </div>
            <div class="mb-3">
                <label for="ContactNumber" class="form-label">Contact Number (optional)</label>
                <input type="tel" class="form-control" name="ContactNumber" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
